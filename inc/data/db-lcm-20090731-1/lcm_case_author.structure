CREATE TABLE `lcm_case_author` (
  `id_case` bigint(21) NOT NULL,
  `id_author` bigint(21) NOT NULL,
  `ac_read` tinyint(1) NOT NULL default '1',
  `ac_write` tinyint(1) NOT NULL default '0',
  `ac_edit` tinyint(1) NOT NULL default '0',
  `ac_admin` tinyint(1) NOT NULL default '0',
  UNIQUE KEY `idx_uniq` (`id_case`,`id_author`),
  KEY `id_case` (`id_case`),
  KEY `id_author` (`id_author`)
) ENGINE=MyISAM DEFAULT CHARSET=utf8